@model IQueryable<User>
@{
    ViewData["Title"] = "Members";
}
<h3 class="display-3 text-center">The Community</h3>
<div class="row d-flex flex-row" id="members">
    @foreach(User user in Model?? Enumerable.Empty<User>())
    {
            <div class="card member-card mt-2 mb-3 bg-dark">
          <div class="card-up blue-gradient"></div>
          <div class="avatar mx-auto white">
            <img src="~/images/profiles/@user.Avatar" class="rounded-circle img-fluid"
          alt="@user.Email">
          </div>
          <div class="card-body text-center text-white" >
            <h4 class="card-title font-weight-bold">@($"{user.FirstName} {user.LastName}")</h4>
            <hr>
            <p><span class="fas fa-quote-left text-white"></span>@user.Profession</p>
          </div>
        </div>
        
    }
</div>
